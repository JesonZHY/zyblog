<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wxnutrition.admin.mapper.LoginMapper">
    <resultMap id="baseResultMap" type="com.wxnutrition.admin.pojo.User">
        <id column="user_id" property="id" jdbcType="VARCHAR"/>
        <result column="user_name" property="username" jdbcType="VARCHAR"/>
        <result column="user_password" property="password" jdbcType="VARCHAR"/>
        <result column="user_photo" property="userPhoto" jdbcType="VARCHAR"/>
        <result column="user_email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="user_registration_time" property="userRegistrationTime" jdbcType="DATE"/>
        <result column="user_birthday" property="userBirthday" jdbcType="DATE"/>
        <result column="user_age" property="userAge" jdbcType="INTEGER"/>
        <result column="user_mobile_num" property="userMobileNum" jdbcType="INTEGER"/>
        <result column="user_nickname" property="userNickname" jdbcType="VARCHAR"/>
        <result column="desc" property="userDesc" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="login" parameterType="String" resultMap="baseResultMap">
        select * from user where user_name = #{username}
    </select>
</mapper>